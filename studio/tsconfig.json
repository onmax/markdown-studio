{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@markdown-studio": ["./src"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "node"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noEmit": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"]
}
